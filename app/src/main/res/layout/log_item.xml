<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:id="@+id/listLayout"
    android:background="#313639" >

    <!-- Session Title -->
    <TextView
        android:id="@+id/sessionTitleEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Title"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="30sp"
        android:textColor="#E68600"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location:"
            android:textColor="#FFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/locationEntry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Location"
            android:textColor="#FFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Steps Total:"
            android:textSize="24sp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/stepsEntry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Steps"
            android:textColor="#FFF"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/button_rounded_background"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="Delete This Log"
        android:textColor="#FFF" />

    <!-- Horizontal divider -->
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E68600" />

</LinearLayout>